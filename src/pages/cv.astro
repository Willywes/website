---
import GithubIcon from "../components/icons/GithubIcon.astro";
import LinkedInIcon from "../components/icons/LinkedInIcon.astro";
import XIcon from "../components/icons/XIcon.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Alejandro Isla | Curriculum Vitae">
  <main class="max-w-[1024px] mx-auto px-6 py-20">
    <div class="grid">
      <div class="col-span-12 flex my-auto gap-12">
        <div
          class="bg-slate-800 bg-opacity-90 rounded-full shadow-xl text-slate-300 w-60 h-60"
        >
          <img class="rounded-full cover" src="/me.png" alt="Alejandro Isla" />
        </div>

        <div class="my-auto">
          <h1 class="text-4xl font-bold text-center md:text-left mb-2">
            Alejandro Isla
          </h1>
          <h2 class="text-xl text-center md:text-left uppercase">
            Desarrollador Full Stack
          </h2>
          <div class="flex pt-6 gap-6">
            <a href="https://github.com/willywes" title="Contact me on Github">
              <GithubIcon />
            </a>
            <a
              href="https://www.linkedin.com/in/willywes/"
              title="Contact me on LinkedIn"
            >
              <LinkedInIcon />
            </a>
            <a href="https://x.com/willywes_" title="Contact me on X">
              <XIcon />
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
