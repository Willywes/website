---
interface Props {
    title: string;
    href: string;
}

const { href, title } = Astro.props;
---

<a
    href={href}
    title={title}
    target="_blank"
    class="flex items-center gap-2 bg-slate-800 hover:bg-slate-700 px-4 md:px-6 py-2 rounded-md shadow-md transition duration-300 ease-in-out"
>
    <slot />
</a>
