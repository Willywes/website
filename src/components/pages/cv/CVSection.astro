---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="cv-section">
  <h2>{title}</h2>
  <slot />
</div>

<style>
  main {
    font-size: 1rem;
    font-family: "Sen", sans-serif;
  }
  h2 {
    font-size: 3rem;
    font-weight: 300;
    margin-bottom: 1rem;
    text-transform: uppercase;
    font-family: "Big Shoulders Display", sans-serif;
  }
  .cv-section p {
    margin-bottom: 2rem !important;
  }
</style>
