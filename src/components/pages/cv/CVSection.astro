---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="cv-section">
  <h2>{title}</h2>
  <slot />
</div>

<style>
  main {
    font-size: 1rem;
  }
  h2 {
    font-size: 3rem;
    font-weight: 300;
    margin-bottom: 1rem;
    text-transform: uppercase;
    font-family: "Big Shoulders Display", sans-serif;
  }
  h2::before {
    content: "";
    display: block;
    width: 3rem;
    height: 0.25rem;
    background-color: rgb(148 163 184);
    margin-top: 0.5rem;
  }

  .cv-section p {
    margin-bottom: 2rem !important;
  }
</style>
