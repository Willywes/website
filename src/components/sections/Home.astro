---
import LinkButton from "../LinkButton.astro";
import GithubIcon from "../icons/GithubIcon.astro";
import LinkedInIcon from "../icons/LinkedInIcon.astro";
---

<section id="home">
    <div
        class="min-h-screen flex flex-col-reverse md:grid md:grid-cols-2 items-center gap-12"
    >
        <div class="flex flex-col gap-12">
            <h1 class="text-5xl sm:text-7xl font-bold">
                Hi <span class="animate-handWave inline-block">ðŸ––</span>, I'm <span
                    class="text-yellow-500">Alejandro</span
                ><br /> a full stack web developer.
            </h1>
            <div class="flex flex-col gap-3">
                <p class="text-lg">
                    I'm a full stack web developer with a passion for building
                    beautiful, functional, and accessible websites. I'm
                    currently working at my own projects and freelancing.
                </p>
                <p class="text-lg">
                    If you believe we can work together, feel free to contact
                    me.
                </p>
            </div>
            <div class="flex gap-4">
                <LinkButton
                    href="https://www.linkedin.com/in/willywes/"
                    title="Contact me on LinkedIn"
                >
                    <LinkedInIcon />
                    LinkedIn
                </LinkButton>
                <LinkButton
                    href="https://github.com/willywes"
                    title="Contact me on Github"
                >
                    <GithubIcon /> Github
                </LinkButton>
            </div>
        </div>
        <div class="flex justify-end">
            <img
                class="rounded-full cover bg-yellow-500 shadow-xl border-2 border-yellow-500"
                src="/me.png"
                alt="Alejandro Isla"
            />
        </div>
    </div>
</section>
