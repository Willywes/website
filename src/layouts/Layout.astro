---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html
	lang="en"
	class="bg-gradient-to-r from-slate-900 to-gray-900 text-slate-300"
>
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="I'm a full stack web developer with a passion for building beautiful, functional, and accessible websites."
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="px-6">
		<slot />
	</body>
</html>
<style is:global>
	html {
		scroll-behavior: smooth;
	}
	body {
		font-family:
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;
	}
</style>

<!-- Google tag (gtag.js) -->
